{
  "name": "stt-comparator-server",
  "version": "0.1.0",
  "private": true,
  "description": "Local evaluation harness for comparing speech-to-text providers.",
  "type": "module",
  "scripts": {
    "dev": "pnpm run dev:stack",
    "dev:server": "tsx watch --tsconfig tsconfig.json src/server.ts",
    "dev:client": "pnpm --filter stt-comparator-client dev",
    "dev:stack": "concurrently -n server,client -c green,blue \"pnpm run dev:server\" \"pnpm --filter stt-comparator-client dev\"",
    "build": "COREPACK_HOME=${COREPACK_HOME:-$(pwd)/.corepack-cache} PNPM_VERSION=10.12.1 sh -c \"corepack prepare pnpm@${PNPM_VERSION} --activate >/dev/null 2>&1 || true; tsc -p tsconfig.json && pnpm --filter stt-comparator-client build\"",
    "start": "node dist/server.js",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "test": "vitest run",
    "test:all": "pnpm test && pnpm --filter stt-comparator-client test"
  },
  "keywords": [
    "stt",
    "asr",
    "compare",
    "speech"
  ],
  "author": "yusuke142529",
  "license": "MIT",
  "packageManager": "pnpm@10.12.1",
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "better-sqlite3": "^12.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "pino": "^9.1.0",
    "uuid": "^11.0.2",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.0",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "concurrently": "^9.0.1",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "pino-pretty": "^13.1.2",
    "supertest": "^7.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.47.0",
    "vitest": "^1.2.0"
  }
}
